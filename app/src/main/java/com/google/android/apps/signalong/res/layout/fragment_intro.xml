<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">
  <Button
      android:gravity="left|center_vertical"
      android:background="@android:color/transparent"
      android:text="@string/button_back"
      android:id="@+id/back_button"
      android:layout_width="wrap_content"
      android:layout_height="48dp" />
  <ImageView
      android:layout_centerHorizontal="true"
      android:id="@+id/center_image_view"
      android:layout_below="@id/back_button"
      android:layout_width="450dp"
      android:layout_height="250dp"/>
  <TextView
      android:textStyle="bold"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/center_image_view"
      android:id="@+id/title_text_view"
      android:layout_marginTop="30dp"
      android:lineHeight="25sp"
      android:textColor="#FF5F6368"
      android:textSize="18sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <TextView
      android:layout_centerHorizontal="true"
      android:layout_below="@id/title_text_view"
      android:id="@+id/content_text_view"
      android:layout_marginTop="14dp"
      android:layout_width="240dp"
      android:textSize="14sp"
      android:lineHeight="23sp"
      android:layout_height="wrap_content" />
  <LinearLayout
      android:id="@+id/circles_layout"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/unselect_circle"
        android:id="@+id/left_circle_image_view"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginRight="4dp"/>
    <ImageView
        android:src="@drawable/unselect_circle"
        android:id="@+id/right_circle_image_view"
        android:layout_marginLeft="4dp"
        android:layout_width="8dp"
        android:layout_height="8dp" />

  </LinearLayout>
  <Button
      android:gravity="right|bottom"
      android:background="@android:color/transparent"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:id="@+id/ok_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textColor="#FF5677FC"
      android:lineHeight="16sp"
      android:text="@string/button_ok" />

</RelativeLayout>
