<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.apps.signalong">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_signalong_24dp"
        android:label="@string/signalong"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".SignAlongActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CameraActivity"></activity>
        <activity android:name=".SettingActivity"></activity>
        <activity android:name=".ChangePasswordActivity"></activity>
        <activity android:name=".MyVideoActivity"></activity>
        <activity android:name=".VideoReviewActivity"></activity>
        <activity android:name=".IntroRecordActivity"></activity>
        <activity android:name=".IntroReviewActivity"></activity>
        <activity
            android:name=".AgreementActivity"
            android:label="@string/title_activity_agreement"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>