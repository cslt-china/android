<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <!-- Note that the app:title field must be added with a non-empty string to purge any
       unwanted display. -->
  <android.support.v7.widget.Toolbar
      android:id="@+id/home_toolbar"
      app:title=" "
      android:background="@color/highLight"
      android:titleTextColor="@color/white"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:elevation="4dp">
    <TextView
        android:id="@+id/app_title_textview"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:layout_marginEnd="10dp"
        android:id="@+id/btn_home_setting"
        android:background="@drawable/ic_person_24p_4x"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"/>
  </android.support.v7.widget.Toolbar>

  <LinearLayout
      android:layout_below="@id/home_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <LinearLayout
        android:id="@+id/recording_task_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:orientation="horizontal">
        <TextView
            android:id="@+id/recording_task_count_textview"
            android:text="@string/label_recording_task_count"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@id/record_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/record_video_button"
            android:text="@string/button_record_video"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:background="@color/highLight"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      </RelativeLayout>
      <android.support.v7.widget.RecyclerView
          android:id="@+id/recording_task_recyclerview"
          android:layout_margin="10dp"
          android:layout_width="match_parent"
          android:layout_height="80dp" />
    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="@color/light_grey" />

    <LinearLayout
        android:id="@+id/review_task_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:orientation="horizontal">
        <TextView
            android:id="@+id/review_task_count_textview"
            android:text="@string/label_review_task_count"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_alignBaseline="@id/review_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/review_video_button"
            android:text="@string/button_review_video"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@color/highLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      </RelativeLayout>
      <android.support.v7.widget.RecyclerView
          android:id="@+id/review_task_recyclerview"
          android:layout_margin="10dp"
          android:layout_width="match_parent"
          android:layout_height="80dp" />
    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="@color/light_grey" />

    <fragment
        android:id="@+id/fragment_my_videos"
        android:name="com.google.android.apps.signalong.MyVideoFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
  </LinearLayout>
</RelativeLayout>
