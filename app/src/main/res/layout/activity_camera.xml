<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <fragment
    android:id="@+id/reference_fragment"
    android:name="com.google.android.apps.signalong.ReferenceVideoViewFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <fragment
    android:id="@+id/countdown_fragment"
    android:name="com.google.android.apps.signalong.CountdownFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:background="@android:color/transparent"
    />

  <fragment
    android:id="@+id/record_fragment"
    android:name="com.google.android.apps.signalong.RecordFragment2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />

  <fragment
    android:id="@+id/self_assess_fragment"
    android:name="com.google.android.apps.signalong.SelfAssessRecordedVideoFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</RelativeLayout>
