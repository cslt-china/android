<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10px"
    android:id="@+id/fragment_my_videos_layout"
    android:orientation="vertical">
  <LinearLayout
      android:paddingBottom="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/my_rejected_video_count_textview"
        android:text="@string/label_rejected_video_count"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/my_pending_video_count_textview"
        android:text="@string/label_pending_video_count"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/my_accepted_video_count_textview"
        android:text="@string/label_accepted_video_count"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/my_recent_videos_recyclerview"
      android:layout_width="match_parent"
      android:layout_height="fill_parent" />

  <fragment
      android:id="@+id/fragment_my_video_view"
      android:name="com.google.android.apps.signalong.VideoViewFragment"
      android:layout_width="match_parent"
      android:layout_height="500dp"
      android:visibility="gone"/>
</LinearLayout>