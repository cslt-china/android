<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">
  <LinearLayout
      android:alpha="0.7"
      android:background="@color/back"
      android:layout_alignParentTop="true"
      android:layout_width="match_parent"
      android:layout_height="140dp"
      android:orientation="vertical">
   <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:orientation="horizontal">
      <TextView
          android:text="@string/label_my_video_gloss_text"
          android:textColor="@color/white"
          android:background="@android:color/transparent"
          android:textSize="16dp"
          android:layout_width="100dp"
          android:layout_height="wrap_content"/>
      <TextView
        android:textColor="@color/white"
        android:id="@+id/gloss_text_textview"
        android:background="@android:color/transparent"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:orientation="horizontal">
        <TextView
            android:text="@string/label_my_video_creation_time"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gloss_creation_time_textview"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:orientation="horizontal">
        <TextView
            android:text="@string/label_gloss_status"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gloss_status_textview"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:orientation="horizontal">
        <TextView
            android:text="@string/label_gloss_approved_counter"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gloss_approved_counter_textview"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:orientation="horizontal">
        <TextView
            android:text="@string/label_gloss_rejected_counter"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gloss_rejected_counter_textview"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
  <fragment
      android:id="@+id/fragment_my_video_view"
      android:name="com.google.android.apps.signalong.VideoViewFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="140dp"/>
</RelativeLayout>
